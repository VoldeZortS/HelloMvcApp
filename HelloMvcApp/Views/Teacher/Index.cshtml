@model List<Ogretmen>
@{
    ViewData["Title"] = "Index";
}

<h1>Öğretmen Listesi</h1>
<div>
    <a asp-controller="Teacher" asp-action="AddTeacher" class="btn btn-success">Öğretmen ekle </a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Tc Kimlik</th>
            <th>Ders</th>
            <th>Öğrenci Sayısı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Tckimlik</td>
                <td>@item.Ders</td>
                <td>@item.Ogrsayi</td>
                <td><a href="/Teacher/DeleteTeacher/@item.Ogretmenid" class="btn btn-danger btn-sm" onclick="return confirm('Emin Misiniz?')">Sil</a> <a href="/Teacher/UpdateTeacher/@item.Ogretmenid" class="btn btn-sm btn-primary">Düzenle</a> </td>
            </tr>
        }
    </tbody>
</table>

